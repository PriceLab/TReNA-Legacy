#----------------------------------------------------------------------------------------------------
.NullFilter <- setClass ("NullFilter",
                     slots = c(mtx.assay = "numeric",
		               quiet = "logical"
                     )
)

#----------------------------------------------------------------------------------------------------
printf <- function(...) print(noquote(sprintf(...)))
#----------------------------------------------------------------------------------------------------
setGeneric("getCandidates",                  signature="obj", function(obj))

#----------------------------------------------------------------------------------------------------
NullFilter <- function(mtx.assay, quiet = TRUE)
{
    # Simply return the genes
    .NullFilter(mtx.assay = mtx.assay, quiet = quiet)

} # NullFilter, the constructor
#----------------------------------------------------------------------------------------------------
setMethod("getCandidates", "NullFilter",

    function(obj){
        # Simply return the genes
	genes <- rownames(mtx.assay)
	invisible(genes)
	})
	
#----------------------------------------------------------------------------------------------------
